{
  "name": "arc",
  "version": "2.0.0",
  "description": "A learning layer for Claude Code. Memory that compounds. Metacognition that knows when to pivot.",
  "entryPoint": "skills/arc/SKILL.md",
  "triggers": [
    {
      "type": "command",
      "command": "arc:recall",
      "description": "Query memory by meaning"
    },
    {
      "type": "command",
      "command": "arc:health",
      "description": "Learning system health"
    },
    {
      "type": "command",
      "command": "arc:meta",
      "description": "Check if approach is working"
    },
    {
      "type": "command",
      "command": "arc:chunk",
      "description": "Extract pattern from success"
    },
    {
      "type": "command",
      "command": "arc:decay",
      "description": "Decay unused memories"
    },
    {
      "type": "command",
      "command": "arc:consolidate",
      "description": "Merge similar memories"
    }
  ],
  "hooks": [
    {
      "type": "SessionStart",
      "script": "scripts/setup-env.sh"
    }
  ],
  "guidance": [
    {
      "name": "reasoning",
      "description": "How to think: impasse detection, complexity assessment",
      "path": "guidance/reason.md"
    },
    {
      "name": "execution",
      "description": "How to act: backpressure gates, honest reporting",
      "path": "guidance/act.md"
    }
  ]
}
