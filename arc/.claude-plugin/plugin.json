{
  "name": "arc",
  "version": "2.0.0",
  "description": "Adaptive reasoning orchestrator. Think deeply, act precisely, learn automatically, know when to pivot.",
  "entryPoint": "skills/arc/SKILL.md",
  "triggers": [
    {
      "type": "command",
      "command": "arc",
      "description": "Execute with adaptive reasoning and learning"
    },
    {
      "type": "command",
      "command": "arc:think",
      "description": "Just the reasoning phase"
    },
    {
      "type": "command",
      "command": "arc:recall",
      "description": "Search memory by meaning"
    },
    {
      "type": "command",
      "command": "arc:health",
      "description": "Learning system health"
    },
    {
      "type": "command",
      "command": "arc:meta",
      "description": "Metacognitive assessment - is approach working?"
    },
    {
      "type": "command",
      "command": "arc:chunk",
      "description": "Extract patterns from successful session"
    },
    {
      "type": "command",
      "command": "arc:decay",
      "description": "Apply memory decay to unused memories"
    },
    {
      "type": "command",
      "command": "arc:consolidate",
      "description": "Merge similar memories"
    }
  ],
  "hooks": [
    {
      "type": "SessionStart",
      "script": "scripts/setup-env.sh"
    }
  ],
  "agents": [
    {
      "name": "arc-reason",
      "description": "Adaptive reasoning - scales depth with complexity, detects impasse",
      "entryPoint": "agents/reason.md"
    },
    {
      "name": "arc-act",
      "description": "Focused execution with backpressure gates and automatic feedback",
      "entryPoint": "agents/act.md"
    }
  ]
}
