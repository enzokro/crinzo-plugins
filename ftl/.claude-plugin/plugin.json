{
  "name": "ftl",
  "description": "Task execution with learning. Planner \u2192 Builder \u2192 Observer.",
  "version": "2.0.6",
  "author": {
    "name": "crinzo"
  },
  "skills": "./skills/",
  "agents": [
    "./agents/explorer.md",
    "./agents/planner.md",
    "./agents/builder.md",
    "./agents/observer.md"
  ],
  "commands": "./commands/",
  "hooks": {
    "SubagentStop": [
      {
        "matcher": "ftl:ftl-explorer",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/post_agent.sh explorer"
          }
        ]
      },
      {
        "matcher": "ftl:ftl-planner",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/post_agent.sh planner"
          }
        ]
      },
      {
        "matcher": "ftl:ftl-builder",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/post_agent.sh builder"
          }
        ]
      },
      {
        "matcher": "ftl:ftl-observer",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/post_agent.sh observer"
          }
        ]
      }
    ]
  }
}