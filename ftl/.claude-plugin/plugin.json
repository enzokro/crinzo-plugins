{
  "name": "ftl",
  "description": "Task execution with learning. Planner \u2192 Builder \u2192 Observer.",
  "version": "2.4.16",
  "author": {
    "name": "crinzo"
  },
  "skills": "./skills/",
  "agents": [
    "./agents/explorer.md",
    "./agents/planner.md",
    "./agents/builder.md",
    "./agents/observer.md"
  ],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/setup-env.sh",
            "timeout": 300
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/cleanup-env.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/inject-learning.sh"
          }
        ]
      }
    ]
  }
}