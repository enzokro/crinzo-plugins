{
  "name": "helix",
  "version": "2.0.0",
  "description": "Structured orchestrator with integrated memory. Explore → Plan → Build → Observe with feedback-based learning.",
  "author": { "name": "crinzo" },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/setup-env.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/inject-context.py"
          }
        ]
      }
    ]
  }
}
